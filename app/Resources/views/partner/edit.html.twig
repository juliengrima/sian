{% extends 'layout.html.twig' %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <div class="container">
            <div class="header-marge">
                <div class="row">
                    <div class="col s12">

                        <div class="row">
                            <h1 class="center">Modification du partenaire</h1>
                        </div>

                        {{ form_start(edit_form) }}

                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Nom du partenaire</p>
                            </div>
                            <div class="col s12 m6 l3">
                                {{ form_widget(edit_form.partner) }}
                                {{ form_errors(edit_form.partner) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 m6 l3">
                                <p>Site Web du partenaire</p>
                            </div>
                            <div class="col s12 m6 l3">
                                {{ form_widget(edit_form.website) }}
                                {{ form_errors(edit_form.website) }}
                            </div>
                        </div>

                        <div class="">
                            <div class="col s12 center">
                                <button class="left" type="submit">
                                    <img src="{{ asset('images/local/icons/plus-icon.svg') }}" class="plus-icon">
                                </button>

                            {{ form_end(edit_form) }}

                            {{ form_start(delete_form) }}

                                <button class="right" type="submit" name="action"
                                        data-position="bottom"
                                        data-delay="50"
                                        data-tooltip="supprimer">
                                    <img src="{{ asset('images/local/icons/delete.svg') }}" class="plus-icon">
                                </button>

                            {{ form_end(delete_form) }}

                                <a class="" href="{{ path('partner_index') }}">
                                    <img src="{{ asset('images/local/icons/home-icon.svg') }}" class="plus-icon">
                                </a>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    {% else %}

        <div class="container">
            <div class="row center">
                <div class="col s12">
                    <img src="{{ asset('images/local/icons/warning-icon1.svg') }}" class="warning">
                </div>
                <div class="col s12">
                    <h2 class="center-align">La page Que vous recherchez n'existe pas</h2>
                </div>
            </div>

        </div>

    {% endif %}

{% endblock %}
